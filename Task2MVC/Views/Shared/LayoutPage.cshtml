
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LayoutPage</title>
    <link href="~/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/twitter-bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    @RenderSection("Head", false);
    <style>
        .BgBlue {
            background-color: blue;
        }
    </style>

</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="navbar-inverse BgBlue navbar-fixed-top">
                <div class="navbar-brand" style="font-size: 30px;">
                    Dare Academy
                </div>
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-target="#menu1" data-toggle="collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div id="menu1">
                    <ul class="nav navbar-nav">
                        <li>
                            <a asp-action="Index" asp-controller="Department">New Department</a>
                        </li>
                        <li>
                            <a asp-action="Index1" asp-controller="Department">Department List</a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Employee">New Employee</a>
                        </li>
                        <li>
                            <a asp-action="Index1" asp-controller="Employee">Employee List</a>
                        </li>
                        <li>
                            <a href="#" style="margin-left:375px;font-size:30px;"> Logout <span class="glyphicon glyphicon-log-out"></span></a>
                         
                        </li>
                    </ul>
                </div>
            </nav>
        </div>


        <div class="row">
            <div class="col-xs-12">
                @RenderSection("Body")
            </div>
        </div>
        
    </div>
</body>
</html>
