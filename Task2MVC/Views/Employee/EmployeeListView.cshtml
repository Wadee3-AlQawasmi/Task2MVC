@model List<Employee>
@{
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
@section Body{
    <form method="post">
        <div class="row">
            <div class="col-xs-4" style="margin-top: 50px; font-size: 50px; font-weight: bold;">
                Employee List
            </div>
        </div>
        <div class="row">
            <div class="col-xs-1">Name</div>
            <div class="col-xs-4">
                <input type="text" class="form-control" name="TxtNameEmployee" />
            </div>
            <input type="submit" value="Search" class="btn" asp-action="SearchEmployee" />
        </div>

        <div class="row" style="margin-top:20px;">
            <div class="col-xs-9">
                <table class="table table-striped table-hover" style="margin-left: 105px;">
                    <thead>
                        <tr>
                            <th>
                                First Name
                            </th>
                            <th>
                                Last Name
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Salary
                            </th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Options
                                <br />
                                <div> Edit|Delete</div>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Employee e in Model)
                        {
                            <tr>
                                <td>
                                    @e.FirstName
                                </td>
                                <td>
                                    @e.LastName
                                </td>
                                <td>
                                    @e.Phone
                                </td>
                                <td>
                                    @e.Salary
                                </td>
                                <td>
                                    <img src='@e.path' style="width:200px; height:200px"/>
                                    
                                </td>
                                <td>
                                   <a asp-action="Edit" asp-route-ID="@e.ID">Edit|</a>
                                   <a asp-action="Delete" asp-route-ID="@e.ID">Delete</a>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
}
