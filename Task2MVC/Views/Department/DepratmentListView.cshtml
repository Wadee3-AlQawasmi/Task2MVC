@model List<Department>

 @{
        Layout = "~/Views/Shared/LayoutPage.cshtml";
 }

    @section Body{
        <form method="post" enctype="multipart/form-data">
            <div class="row" style="margin-top:70px;">
                <div class="col-xs-1">Name</div>
                <div class="col-xs-4">
                    <input type="text" class="form-control" name="TxtNameDepartment" />
                </div>
                <input type="submit" value="Search" class="btn" asp-action="SearchDepartment" />
            </div>

            <div class="row" style="margin-top:20px;">
                <div class="col-xs-6">
                    <table class="table table-striped table-hover" style="width:450px; margin-left: 105px;">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Description
                                </th>
                                <th>
                                    Option
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Department d in Model)
                            {
                                <tr>
                                    <td>
                                        @d.Name
                                    </td>
                                    <td>
                                        @d.Description
                                    </td>
                                    <td>
                                        <a>Edit|</a>
                                        <a>Delete|</a>
                                        <a asp-action="SelectEmployee" asp-route-ID="@d.ID">Employee</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>

            <div class="modal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p>Modal body text goes here.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Save changes</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>

    }

